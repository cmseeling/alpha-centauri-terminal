{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../build"
  },
  "package": {
    "productName": "alpha-centauri-terminal",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "setMinSize": true
      }
    },
    "cli": {
      "args": [
        {
          "name": "configFile",
          "short": "c",
          "index": 1,
          "takesValue": true
        }
      ]
    },
    "windows": [
      {
        "title": "Alpha CenTauri Terminal",
        "minWidth": 300,
        "minHeight": 200,
        "visible": false,
        "additionalBrowserArgs": "--remote-debugging-port=9222"
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "alpha-centauri-terminal",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
